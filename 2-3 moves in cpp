#include<bits/stdc++.h>
using namespace std;
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        int n;
        cin >> n;
        int c=0,k=0;
        c=n%3;
        k=n-c;

        if(n==1)cout << "2" << endl;
        else if(c==0) cout << n/3 << endl;
        else cout << (k/3)+1 << endl;
    }
    return 0;
}
