#include<bits/stdc++.h>
using namespace std;
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl '\n';

int main(){

optimize();
   
   //int arr[1000];

   //vector<int>v;
   int t;
   cin >> t;
   while(t--)
   {
    string s;
    cin >> s;
    bool f=false;
    int len=s.size();
    for(int i=0;i<len;i++){
        if((int)s[i]%2==0)
        f=true;
    }

if(f==false)
{
    cout << "-1" << endl;
}
else{
    if((int)s[len-1]%2==0)
    {
        cout << "0" << endl;
    }
    else if((int)s[0]%2==0)
    {
        cout << "1" << endl;
    }
    else{
        cout << "2" << endl;
    }
}
    }
   
return 0;
}
