#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define max1 10000
#define pb push_back
#define fi first
#define se second
#define vst() sort(v.begin(),v.end())
#define vec() vector<ll>v
int main(){

     ll a;
     cin>>a;

     while(a--){
      vector<char>v;
      vector<char>v1;
      vector<char>v2;
      string s;
      cin>>s;
      //cout<<s<<endl;

      for(ll i=0;i<s.size();i++){
        v.push_back(s[i]);
         v.pb(s[i]);

      }
      // for(auto u:v)cout<<u;
      //    cout<<endl;

      for(ll i=0;i<v.size();i+=2){
         v1.pb(v[i]);
      }
         //    for(auto u:v1)cout<<u;
         // cout<<endl;

      for(ll i=v.size()-1;i>=0;i-=2){
         v2.pb(v[i]);
      }
      // for(auto u:v2)cout<<u;
      //    cout<<endl;

      for(ll i=0;i<v1.size();i++){
         cout<<v1[i];
         cout<<v2[i];
      }
      cout<<endl;
      v1.clear();
      v2.clear();
         v.clear();
      
      
     }
   return 0;
}
