#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define max1 10000
#define pb push_back
#define fi first
#define se second
#define vst() sort(v.begin(),v.end())
int main()
{
    ll t;
    cin>>t;
    while(t--)
    {
        ll n,cnt=0;
        cin>>n;

        if(n%2==0)
        {
            ll x=1,y=3*n;
            cout<<n/2<<endl;
            cout<<x<<" "<<y<<endl;
            for(ll i=1;i<n/2;i++)
            {
                x+=3;
                y-=3;
                cout<<x<<" "<<y<<endl;
            }
        }
        else
        {
            ll x=1,y=3*n;
            cout<<n/2+1<<endl;
            cout<<x<<" "<<y<<endl;
            for(ll i=1;i<=n/2;i++)
            {
                x+=3;
                y-=3;
                cout<<x<<" "<<y<<endl;
            }
        }
    }

        return 0;
    }
