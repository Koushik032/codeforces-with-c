int main()
{
    optimize();

            int n;
            cin >> n;
            
            vi v;
            
            for ( int i = 0; i < n ; i++ )
            {
            	ll a;
            	cin >> a;
            	v.PB(a);
            }
            sort(all(v));
            
            if ( v[0] == 1 )
            cout << -1 << endl;
            else cout << 1 << endl;

    return 0;
