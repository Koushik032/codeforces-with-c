#include<bits/stdc++.h>
using namespace std;
#define ll long long
#define max1 10000
#define pb push_back
#define fi first
#define se second
#define vst() sort(v.begin(),v.end())
int main()
{

    ll t;
    cin>>t;
    while(t--)
    {
        ll a,b,cnt=0,sum=0;
        cin>>a>>b;
        for(ll i=0;;i++)
        {
            if(i==0)
            {
                a-=2;
                cnt++;
            }
            else
            {
                a-=b;
                cnt++;
            }
            if(a<=0)
            {
                break;
            }
        }
        cout<<cnt<<endl;
    }

        return 0;
    }
