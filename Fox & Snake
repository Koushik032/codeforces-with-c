#include <iostream>
#include<bits/stdc++.h>
#define ll long long
using namespace std;
int main() {
        ll n,m;
        cin>>n>>m;

        for(ll i=1;i<=n;i++)
        {
            for(ll j=1;j<=m;j++)
            {
                if(i%2==0)
                {
                    if(i%4==0 && j==1)
                    {
                        cout<<"#";
                    }
                    else if(i%4!=0 && (i%2==0 && j==m))
                    {
                        cout<<"#";
                    }
                    else{
                        cout<<".";
                    }
                }
                else 
                cout<<"#";
            }

            cout<<endl;
        }
    // your code goes here
    return 0;
}
