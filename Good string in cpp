#include<bits/stdc++.h>
using namespace std;
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl '\n';
int main()
{
    int n;
    cin >> n;
    
    string str,str1;

    cin >> str;

    int i=0;
    while(i<n-1){
        if(str[i]!=str[i+1])
        {
            str1+=str[i];
            str1+=str[i+1];
            i++;
        }
        i++;
    }
    cout << n-str1.size() << endl;
    cout<< str1 << endl;
    return 0;
}
