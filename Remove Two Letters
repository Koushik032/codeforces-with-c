#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;

    while ( t-- )
    {
        int n, cnt = 0;
        cin >> n;

        string s;
        cin >> s;

        for ( int i = 1; i < n-1; i++ )
        {
            if ( s[i+1] != s[i-1] )cnt++;
        }
        cout << cnt+1 << endl;
    }

    return 0;
}
