#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin >> n;
    int a,b,c;
    for(int i=0;i<n;i++)
    {
        cin >> a >> b >> c;
    
    int x=abs(b-c);

    if(a-1<x+c-1)
    {
        cout << 1 << endl;
    }
    else if(a-1>x+c-1)
    {
        cout << 2 << endl;
    }
    else{
        cout << 3 << endl;
    }
    }
    return 0;
}
