#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main(){
   ll n,k;
   cin>>n>>k;
   
   ll sum=ceil((double)n/2);
//cout<<sum<<endl;
   if(sum<k)
   {
    ll num=abs(sum-k)*2;
    cout<<num<<endl;
   }
   else
   {
    ll num1=(2*k-1);
    cout<<num1<<endl;
   }
   
    return 0;
}
